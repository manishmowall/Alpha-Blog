<h1 class= "text-center mt-4">Create a new category</h1>
<div class="container">
  
  <div class= "row justify-content-center">
    <div class = "col-10">
     <%= render 'shared/errors', obj: @category %> 
        <%= form_with(model: @category,class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
            <div class= "form-group row">
                <%= f.label :name ,"Category name" ,class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                    <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter name of category" %>
                </div>
            </div>
                    <center>
                    <%= f.submit class: "btn btn-outline-light btn-lg mt-4" %>
                    </center>
        <% end %>
    </div>
    <div class="mb-3">
    <center>
    <%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "text-info" %> 
    </center>
    </div>
  </div>
</div>